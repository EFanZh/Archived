<Window x:Class="Another_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Another_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Slider DockPanel.Dock="Top" Name="MainSlider" ValueChanged="MainSlider_ValueChanged" />
        <Border Name="MainCanvas" SizeChanged="MainCanvas_SizeChanged">
            <Image Name="MainImage" Stretch="Fill" />
        </Border>
    </DockPanel>
</Window>
