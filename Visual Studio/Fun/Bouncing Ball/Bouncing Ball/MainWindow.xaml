<Window x:Class="BouncingBall.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:bouncingBall="clr-namespace:BouncingBall" mc:Ignorable="d" Title="MainWindow" d:DataContext="{d:DesignInstance bouncingBall:Scene}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="{Binding BallSize}" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MainCanvas" Grid.Column="0" MinHeight="{Binding BallSize}" Background="{Binding Background}" RenderTransformOrigin="0.5 0.5" SizeChanged="Canvas_SizeChanged">
            <Canvas.RenderTransform>
                <ScaleTransform ScaleY="-1" />
            </Canvas.RenderTransform>
            <Ellipse Canvas.Left="{Binding BallX}" Canvas.Top="{Binding BallY}" Width="{Binding BallSize}" Height="{Binding BallSize}" Fill="{Binding BallBrush}" />
        </Canvas>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" Width="5" />
        <Grid Grid.Column="2"></Grid>
    </Grid>
</Window>
